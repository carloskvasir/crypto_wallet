<p id="notice"><%= notice %></p>

<h1><%= @coins.model_name.human(count: @coins.count) %></h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th><%= @coins.human_attribute_name(:description) %></th>
      <th><%= @coins.human_attribute_name(:acronym) %></th>
      <th><%= @coins.human_attribute_name(:url_image) %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @coins.each do |coin| %>
      <tr>
        <td><%= coin.description %></td>
        <td><%= coin.acronym %></td>
        <% if coin.url_image.present? %>
          <td><%= image_tag coin.url_image, size: 25  %></td>
        <% end %>
        <td><%= link_to t('links.show'), coin , { class: "btn btn-info btn-sm mx-1", type: "button" } %></td>
        <td><%= link_to t('links.edit'), edit_coin_path(coin), type:"button", class:"btn btn-primary btn-sm mx-1" %></td>
        <td><%= link_to t('links.delete'), coin, method: :delete, data: { confirm: t('messages.confirm') }, type: "button", class: "btn btn-danger btn-sm mx-1" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('links.new'), new_coin_path, { class: "btn btn-primary btn-sm", type: "button" }%>
