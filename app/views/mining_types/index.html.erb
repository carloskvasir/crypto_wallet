<p id="notice"><%= notice %></p>

<h1><%= @mining_types.model_name.human(count: 2) %></h1>

<table class="table">
  <thead>
    <tr>
      <th><%= @mining_types.human_attribute_name(:description) %></th>
      <th><%= @mining_types.human_attribute_name(:acronym) %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @mining_types.each do |mining_type| %>
      <tr>
        <td class="mx-auto"><%= mining_type.description %></td>
        <td class="mx-auto"><%= mining_type.acronym %></td>
        <td>
          <%= link_to t('links.show'), mining_type, { class: "btn btn-info btn-sm", type: "button" } %>
          <%= link_to t('links.edit'), edit_mining_type_path(mining_type) ,type:"button", class:"btn btn-primary btn-sm mx-1" %>
          <%= link_to t('links.delete'), mining_type, method: :delete, data: { confirm: 'Are you sure?' }, type: "button", class: "btn btn-danger btn-sm"  %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('links.new'), new_mining_type_path, { class: "btn btn-primary btn-sm", type: "button" } %>
